@using System.Text.Json.Serialization
@inherits BaseIonicInputComponent<DateTimeOffset?, IonDateTime.InputChangeEventDetail>
@namespace Blazor.Ionic
<ion-datetime value="@Value" @attributes="InputAttributes" @ref="Element">@ChildContent</ion-datetime>

@code {

    public class InputChangeEventDetail : BaseIonicChangeEventDetail<DateTimeOffset?>
    {
        [JsonPropertyName("value")]
        public string Value { get; set; }

        public override DateTimeOffset? GetValue()
        {
            if (string.IsNullOrEmpty(Value)|| !DateTimeOffset.TryParse(Value, out var res))
            {
                return null;
            }

            return res;
        }
    }

}